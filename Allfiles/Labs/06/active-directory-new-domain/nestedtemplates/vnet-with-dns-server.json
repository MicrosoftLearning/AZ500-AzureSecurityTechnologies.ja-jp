{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "作成する仮想ネットワークの名前"
            }
        },
        "virtualNetworkAddressRange": {
            "type": "string",
            "metadata": {
                "description": "CIDR 形式の新しい VNET のアドレス範囲"
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "新しい VNET で作成されるサブネットの名前"
            }
        },
        "subnetRange": {
            "type": "string",
            "metadata": {
                "description": "新しい VNET で作成されるサブネットのアドレス範囲"
            }
        },
        "DNSServerAddress": {
            "type": "array",
            "metadata": {
                "description": "VNET が使う DNS サーバーの DNS アドレス (複数可)"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "すべてのリソースの場所。"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('virtualNetworkName')]",
            "apiVersion": "2019-02-01",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('virtualNetworkAddressRange')]"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": "[parameters('DNSServerAddress')]"
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetRange')]"
                        }
                    }
                ]
            }
        }
    ]
}